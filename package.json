{
  "name": "padel-world-club-api",
  "version": "1.0.0",
  "description": "Modern REST API for Padel Venue Management Platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prod": " vercel --prod",
    "dev": "bun run --watch index.ts",
    "dev:fast": "NODE_ENV=development bun run index.ts",
    "build": "bun build src/api/server.ts --outdir ./dist --target node --minify",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:full": "bun run build && bun run build:types",
    "build:vercel": "bash scripts/vercel-build.sh",
    "start": "NODE_ENV=production node dist/server.js",
    "typecheck": "bun exec tsc --project tsconfig.api.json --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seeds/index.ts",
    "db:push": "drizzle-kit push",
    "api": "bun run src/api/server.ts",
    "api:dev": "bun run --watch src/api/server.ts",
    "api:test": "vitest run src/api/__tests__",
    "api:test:watch": "vitest src/api/__tests__",
    "tdd": "bash scripts/tdd-cycle.sh",
    "prepare": "echo 'Skipping prepare for deployment'",
    "postinstall": "node -e \"try { require('fs').symlinkSync('./example.env', './.env', 'file') } catch (e) {}\""
  },
  "keywords": [
    "padel",
    "api",
    "rest",
    "typescript",
    "express",
    "drizzle",
    "neon",
    "postgres",
    "vercel",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "src",
    "example.env",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gHashTag/padle-world-club.git"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.29.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "swagger-ui-express": "^5.0.1",
    "telegraf": "^4.16.3",
    "telegraf-i18n": "^6.6.0",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.2.12",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "@types/yamljs": "^0.2.34",
    "@vercel/node": "^5.1.16",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/ui": "3.1.4",
    "autocannon": "^8.0.0",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.56.0",
    "open": "^10.1.2",
    "supertest": "^7.1.1",
    "typescript": "^5.3.3",
    "vitest": "3.1.4"
  }
}
