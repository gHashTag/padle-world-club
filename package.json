{
  "name": "telegram-bot-starter-kit",
  "version": "1.0.0",
  "description": "Универсальный стартовый набор для разработки Telegram ботов на TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "dev:fast": "NODE_ENV=development bun run index.ts",
    "build": "bun build index.ts --outdir ./dist --target node",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:full": "bun run build && bun run build:types",
    "start": "NODE_ENV=production node dist/index.js",
    "typecheck": "bun exec tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "generate:scene": "bun run scripts/generate-wizard-scene.ts",
    "tdd": "bash scripts/tdd-cycle.sh",
    "prepare": "bun run build:full",
    "postinstall": "node -e \"try { require('fs').symlinkSync('./example.env', './.env', 'file') } catch (e) {}\""
  },
  "keywords": [
    "telegram",
    "bot",
    "starter-kit",
    "typescript",
    "telegraf",
    "wizard-scene",
    "drizzle",
    "neon",
    "postgres"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "files": [
    "dist",
    "src",
    "example.env",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/telegram-bot-starter-kit.git"
  },
  "dependencies": {
    "@apollo/client": "^3.9.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.29.5",
    "pg": "^8.11.3",
    "telegraf": "^4.16.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.12",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/ui": "^3.1.3",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  }
}
