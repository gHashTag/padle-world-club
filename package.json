{
  "name": "instagram-scraper-bot",
  "version": "1.0.0",
  "description": "Instagram Scraper Bot module for Telegram bot",
  "type": "module",
  "scripts": {
    "dev": "npx tsx scripts/run-bot.ts",
    "dev:dashboard": "bun run scripts/dev-dashboard.ts",
    "dev:pm2": "pm2 start ecosystem.config.cjs --env development",
    "start:pm2": "pm2 start ecosystem.config.cjs --env production",
    "stop:pm2": "pm2 stop ecosystem.config.cjs",
    "delete:pm2": "pm2 delete ecosystem.config.cjs",
    "logs:pm2": "pm2 logs",
    "db:studio": "bunx drizzle-kit studio --port 3457",
    "db:generate": "bunx drizzle-kit generate",
    "db:generate-node": "dotenv -e .env.development -- node ./node_modules/.bin/drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:push-direct": "bunx drizzle-kit push",
    "db:push-node": "dotenv -e .env.development -- node --import=tsx ./node_modules/.bin/drizzle-kit push",
    "db:migrate-node": "dotenv -e .env.development -- node ./node_modules/.bin/drizzle-kit migrate",
    "exec-drizzle-studio": "dotenv -e .env.development -- bunx drizzle-kit studio --port 3458",
    "agent:test-run": "dotenv -e .env.development -- tsx agent/index.ts",
    "test": "bash scripts/test-all.sh",
    "test:ui": "bunx vitest --ui",
    "test:integration": "bash scripts/test-integration-simple.sh",
    "test:neon": "bash scripts/test-neon-adapter.sh",
    "test:all-except-neon": "bash scripts/test-all-except-neon.sh",
    "test:telegram": "bash scripts/test-telegram-scenes.sh",
    "test:database": "bash scripts/test-database.sh",
    "test:utils": "bash scripts/test-utils.sh",
    "test:e2e": "bash scripts/test-e2e.sh",
    "test:bot-flow": "bun run scripts/test-bot-flow.ts",
    "test:bot-flow-mock": "bun run scripts/test-bot-flow-mock.ts",
    "test:exit-button": "bun run scripts/test-exit-button.ts",
    "test:bot-and-flow": "bash scripts/run-bot-and-test.sh",
    "test:button-handler": "bash scripts/test-button-handler.sh",
    "typecheck": "bun --bun exec tsc --noEmit",
    "db:seed": "dotenv -e .env.development -- tsx scripts/seed-database.ts",
    "generate:tests": "bun run scripts/generate-scene-tests.ts",
    "generate:telegram-tests": "bun run scripts/generate-telegram-tests.ts",
    "tdd": "bash scripts/tdd-cycle.sh"
  },
  "keywords": [
    "instagram",
    "scraper",
    "telegram",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "apify-client": "^2.12.3",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "open": "^10.1.2",
    "openai": "^4.98.0",
    "pg": "^8.15.6",
    "telegraf": "^4.16.3",
    "telegraf-i18n": "^6.6.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.2.12",
    "@types/express": "^5.0.1",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/ui": "^3.1.3",
    "dotenv-cli": "^8.0.0",
    "input": "^1.0.1",
    "telegram": "^2.19.10",
    "tsx": "^4.19.4",
    "vitest": "^3.1.3"
  }
}
