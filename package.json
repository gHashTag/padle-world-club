{
  "name": "telegram-bot-starter-kit",
  "version": "1.0.0",
  "description": "Универсальный стартовый набор для разработки Telegram ботов на TypeScript",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "build": "bun build index.ts --outdir ./dist --target node",
    "start": "node dist/index.js",
    "typecheck": "bun exec tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "generate:scene": "bun run scripts/generate-wizard-scene.ts",
    "tdd": "bash scripts/tdd-cycle.sh"
  },
  "keywords": [
    "telegram",
    "bot",
    "starter-kit",
    "typescript",
    "telegraf",
    "wizard-scene"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.5.0",
    "telegraf": "^4.16.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.12",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/ui": "^3.1.3",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.3"
  }
}
